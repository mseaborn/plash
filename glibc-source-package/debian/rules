binary: binary-indep

clean:

build:

binary-arch:

binary-indep:
	install -d debian/tmp/usr/src
	cp -pv glibc-2.3.6.tar.bz2 debian/tmp/usr/src
	cp -pv glibc-linuxthreads-2.3.6.tar.bz2 debian/tmp/usr/src
	dh_installdocs
	dh_installchangelogs
	dh_fixperms
	dh_compress
	dh_gencontrol
	dh_installdeb
	dh_md5sums
	dh_builddeb
